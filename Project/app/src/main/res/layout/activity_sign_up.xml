<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity"
    android:layout_gravity="center"
    android:background="@drawable/gradiant2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/foxhub_logo"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-100dp">
    </ImageView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/handshake1"
        android:layout_gravity="center"
        android:layout_marginTop="-30dp"
        android:layout_margin="0dp">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Enter your informtion to get started!"
        android:textSize="18dp"
        android:textAlignment="center"
        android:fontFamily="SF Pro Display"
        android:textStyle="bold">
    </TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fullname"
        android:hint="Enter Your Full Name"
        android:layout_gravity="center"
        android:padding="30dp"
        android:textStyle="italic">
    </EditText>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:hint="Enter Your Username"
        android:layout_gravity="center"
        android:padding="30dp"
        android:textStyle="italic">
    </EditText>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:hint="Enter Your Password"
        android:layout_gravity="center"
        android:padding="30dp"
        android:textStyle="italic">
    </EditText>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="signUpPress"
        android:src="@drawable/signupbutton"
        android:layout_gravity="center">
    </ImageButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Already have an account?"
        android:textSize="18dp"
        android:textAlignment="center"
        android:fontFamily="SF Pro Display">
    </TextView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/loginbutton"
        android:layout_gravity="center"
        android:onClick="backtoLog">
    </ImageButton>

</LinearLayout>